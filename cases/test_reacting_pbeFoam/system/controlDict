FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     reacting_pbeFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         20000;

deltaT          1e-3;

writeControl    timeStep;

writeInterval   1000;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  true;

maxCo           0.5;

maxAlphaCo      0.3;

maxDeltaT       1;


libs
(
"libcompressible.so"
);


functions{


    volAverage
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");
        fields         
        (
            y_AgNO3
            y_tri
            y_tannic
            y_H2O
            y_Agl
            y_Ags
            y_Ags2
            moment.0.populationBalance
            moment.1.populationBalance
            moment.2.populationBalance
            moment.3.populationBalance
            rho
            p
        );

        writeFields         no;
        name                volumeAverage;
        operation	    volAverage;
        executeControl      timeStep;
        executeInterval     100;
        writeControl        timeStep;
        writeInterval       100;
    }

    probes1
    {
        functionObjectLibs ( "libsampling.so" );
        type               probes;
        name               probes1;
        executeControl      timeStep;
        executeInterval     100;
        writeControl        timeStep;
        writeInterval       100;
        fields
        (
            y_AgNO3
            y_tri
            y_tannic
            y_H2O
            y_Agl
            y_Ags
            y_Ags2
            moment.0.populationBalance
            moment.1.populationBalance
            moment.2.populationBalance
            moment.3.populationBalance
            rate_product_Agl_reduction
            rate_product_Ags_nuc
            rate_product_Ags2_g
            rho
            p
         );

        probeLocations
        (
            (0.5 0.5 0.5)
        );
    }

}



