FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      populationaBalanceProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

populationBalanceModel univariate;

univariateCoeffs
{
    aggregation on;
    aggregationKernel
    {
        aggregationKernel Brownian;
    }

    breakup off;
    breakupKernel
    {
        breakupKernel       LuoSvendsen;

        Cb        Cb        [ 0 0 0 0 0 0 0 ] 6.0e-4;
        epsilonExp          0.75;
        nuExp              -1.25;
        sizeExp             1.0;

        daughterDistribution
        {
            daughterDistribution symmetricFragmentation;
        }
    }

    diffusionModel
    {
        diffusionModel  molecularDiffusion;
        gammaLam        gammaLam    [ 0 2 -1 0 0 0 0 ] 0.0001;
        Sc              0.7;
    }

    growth off;
    growthModel
    {
        growthModel	    constant;
        minAbscissa     0.0;
        maxAbscissa     1e15;

        Cg        Cg        [0 0 -1 0 0 0 0 ] 0.1e-7;
    }

    nucleation on;
    nucleationModel
    {
        nucleationModel      nucleation_reaction;
        k1                   k1    [0 0 -1 0 0 0 0] 1.75e-05;
        dcrit                dcrit [0 1 0 0 0 0 0] 1e-8;
        mwAgs                mwAgs    [1 0 0 0 -1 0 0] 0.16987;
    }

    odeCoeffs
    {
        ATol    1.0e-8;
        RTol    1.0e-3;
        fac     0.9;
        facMin  0.5;
        facMax  2.0;
        minLocalDt 1.0e-5;
    }
}





